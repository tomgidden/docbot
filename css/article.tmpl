<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>$title$</title>
  <link rel="stylesheet" href="../css/print.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
</head>
<body class="$extraclass$">
  <article>
    <header id="pageHeader">$title$</header>
    <footer id="pageFooter">$if(copyright)$Â© $year$, $copyright$$endif$</footer>
    <title>$title$</title>

    <hgroup>
      <h1>$title$</h1>
      $if(subtitle)$
        <p>$subtitle$</p>
      $endif$

      $for(authors)$
        <address>$if(authors.name)$$authors.name$$elseif(authors.firstname)$$if(authors.surname)$$authors.firstname$ $authors.surname$$endif$$endif$$if(authors.affiliation)$<affiliation>$authors.affiliation$</affiliation>$endif$$if(authors.email)$<div class="mailto"><a href="mailto:$authors.email$">&lt;$authors.email$&gt;</a></div>$endif$</address>
      $endfor$

      $if(project)$
        <div class="project product">$project$</div>
      $elseif(product)$
        <div class="project product">$product$</div>
      $elseif(productname)$
        <div class="project product">$productname$</div>
      $endif$

      $if(date)$
      <time>
        $if(date.day)$$date.day$$endif$
        $if(date.month)$$date.month$$endif$
        $if(date.year)$$date.year$$endif$
      </time>
      $endif$
    </hgroup>

    $for(include-before)$
    <aside class="preamble">
    $include-before$
    </aside>
    $endfor$

    <main>
    $body$
    </main>

    $for(include-after)$
    <aside class="postamble">
    $include-after$
    </aside>
    $endfor$
  </article>
</body>
</html>

